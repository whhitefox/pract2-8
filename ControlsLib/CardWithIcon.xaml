<UserControl x:Class="ControlsLib.CardWithIcon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ControlsLib"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="80"
             Height="80" Width="80">
    <Grid>
        <Grid Background="AntiqueWhite" Margin="5,5,5,5">
            <StackPanel Margin="0,10,0,0">
                <Label x:Name="Label" HorizontalAlignment="Center" />
                <Image x:Name="Image" Width="30" Height="30" />
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
