<UserControl x:Class="ControlsLib.CheckListItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ControlsLib"
             mc:Ignorable="d" 
             d:Height="80" d:DesignWidth="800">
    <Grid>
        <Grid Margin="5,5,5,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="80" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <CheckBox x:Name="SelectedCheckBox" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Checked="SelectedCheckBox_Checked" Unchecked="SelectedCheckBox_Unchecked" />
            <Image x:Name="Image" Grid.Column="1" HorizontalAlignment="Right" />
            <Label x:Name="Label" Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Center" />
        </Grid>
    </Grid>
</UserControl>
